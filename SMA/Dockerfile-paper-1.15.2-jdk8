# Setup the working directory
RUN mkdir /srv/github-actions-app
WORKDIR /_server_

COPY magikcraft/scriptcraft scriptcraft
RUN mkdir plugins
COPY magikcraft/magik-scriptcraft.jar plugins/magik-scriptcraft.jar
RUN mkdir -p scriptcraft-plugins/__jasmineÃŸ
COPY magikcraft/scriptcraft-plugins/__jasmine scriptcraft-plugins/__jasmine
